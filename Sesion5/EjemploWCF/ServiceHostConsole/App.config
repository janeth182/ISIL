<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <behaviors>
            <serviceBehaviors>
                <behavior name="ProductServiceBehavior">
                    <serviceDebug includeExceptionDetailInFaults="true" />
                    <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:8080/productservice" />
                </behavior>
            </serviceBehaviors>
        </behaviors>
        <services>
            <service behaviorConfiguration="ProductServiceBehavior" name="ProductsService.ProductsService">
                <endpoint address="http://localhost:8080/productservice" binding="basicHttpBinding"
                    bindingConfiguration="" name="HTTP_EndPoint" contract="ProductsService.IProductsService" />
                <endpoint address="net.tcp://localhost:8081/productservice" binding="netTcpBinding"
                    bindingConfiguration="" name="TCP_EndPoint" contract="ProductsService.IProductsService" />
            </service>
        </services>
    </system.serviceModel>
</configuration>